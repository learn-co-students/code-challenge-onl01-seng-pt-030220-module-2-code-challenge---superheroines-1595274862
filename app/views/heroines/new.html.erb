<h1>Create a New Heroine</h1>

<% if @errors %>
<ul>
  <% @errors.each do |msg| %>
    <li class="danger"><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= form_for @heroine do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :super_name %>
  <%= f.text_field :super_name %><br>
  <%= f.collection_select :power_ids, Power.all, :id, :name %>
  <%= f.submit %>
<% end %>