<% if @heroine.errors.any? %>
     <h2> <%= pluralize(@heroine.errors.count, "error") %>
      prohibited this heroine from being saved:
    </h2>
    <ul>
    <% @heroine.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
<% end %>

<%= form_for (@heroine) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :super_name %>
    <%= f.text_area :super_name %><br>
    <%= f.collection_select :power_ids, Power.all, :id, :name%><br>
    <%= f.submit %>

    <% end %>
    